[Unit]
Description=Backup canary service for pod-charlesreid1
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
#StandardError=append:/var/log/pod-charlesreid1-canary.service.log
#StandardOutput=append:/var/log/pod-charlesreid1-canary.service.log
StandardError=syslog
StandardOutput=syslog
SyslogIdentifier=pod-charlesreid1-canary
ExecStartPre=/usr/bin/test -f {{ pod_charlesreid1_pod_install_dir }}/environment
ExecStart=/bin/bash -ac '. {{ pod_charlesreid1_pod_install_dir }}/environment; {{ pod_charlesreid1_pod_install_dir }}/scripts/backups/canary/vp/bin/python3 {{ pod_charlesreid1_pod_install_dir }}/scripts/backups/canary/backups_canary.py'
User=charles
Group=charles
