ExecStart=/bin/bash -ac '. {{ pod_charlesreid1_install_dir }}/environment; {{ pod_charlesreid1_install_dir }}/scripts/backups/canary/vp/bin/python3 {{ pod_charlesreid1_install_dir }}/scripts/backups/canary/backups_canary.py'
