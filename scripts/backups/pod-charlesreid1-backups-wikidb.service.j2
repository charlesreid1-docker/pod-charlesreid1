[Unit]
Description=Back up the pod-charlesreid1 wiki database
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
StandardError=file:/var/log/pod-charlesreid1-backups-wikidb.service.error.log
StandardOutput=file:/var/log/pod-charlesreid1-backups-wikidb.service.output.log
ExecStartPre=/usr/bin/test -f {{ pod_charlesreid1_install_dir }}/environment
ExecStart=/bin/bash -ac '. {{ pod_charlesreid1_install_dir }}/environment; {{ pod_charlesreid1_install_dir }}/scripts/backups/wikidb_dump.sh'
User=charles
Group=charles

